<div class = "container">
<form action ="/createuser" method="Post">
  <fieldset>
    <legend class="text-center">Sign-in Page</legend>
    
    <br>
    <br>
    
    <div class="form-group row">
      <label for = "staticEmail" class = "col sm-2 col-form-label" >Name*</label>
      <div class="col-sm-10">
      <input type="text" class="form-control-plaintext" name="fullname" placeholder="Enter your Name Here">
      </div>
    </div>

    <div class="form-group row">
      <label for="staticEmail" class="col sm-2 col-form-label" >Date of Birth*</label>
      <div class="col-sm-10">
      <input type="text" class="form-control-plaintext" name = "dob" placeholder="Enter Date of birth Here">
      </div>
    </div>

    <fieldset class="form-group row">
      <label for="staticEmail" class="col sm-2 col-form-label" >Gender*</label>
      <div class="col-sm-10">
      <div class="form-check">
        <label class="form-check-label">
            <div class="col-sm-10">
          <input type="radio" class="form-check-input" name="gender" value="Male">
          Male
          </div>
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
            <div class="col-sm-10">
          <input type="radio" class="form-check-input" name="gender"  value="Male">
          Female
          </div>
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
            <div class="col-sm-10">
          <input type="radio" class="form-check-input" name="gender"  value="Male">
          All
          </div>
        </label>
      </div>
      </div>
    </fieldset>

    <div class="form-group row">
      <label for="staticEmail" class="col sm-2 col-form-label"  >Mobile Number*</label>
      <div class="col-sm-10">
      <input type="text"  name = "mobile" class="form-control-plaintext" placeholder="Enter Mobile Number Here">
      </div>
    </div>


    <div class="form-group row">
      <label for="staticEmail" class="col sm-2 col-form-label" >Email address*</label>
      <div class="col-sm-10">
      <input type="email address" name = "email" class="form-control-plaintext" placeholder="Enter your email address">
      </div>
    </div>

    <div class="form-group row">
      <label for="staticEmail" class="col sm-2 col-form-label" >Password*</label>
      <div class="col-sm-10">
      <input type="text" name = "password" class="form-control-plaintext" placeholder="Enetr your Password">
      </div>
    </div>
  
    <div class="form-group row">
      <label for="staticEmail" class="col sm-2 col-form-label" >Confirm Password*</label>
      <div class ="col-sm-10">
      <input type="text" name = "cp" class="form-control-plaintext" placeholder="Enter your Confirm Password">
      </div>
    </div>

    <div class="form-group row">
      <label for="exampleInputFile" class="col sm-2 col-form-label">Photo*</label>
      <div class="col-sm-10">
      <input type="file" name = "photo" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
      </div>
    </div>
    
    <button type="submit" class="btn btn-success">Submit</button>
  </fieldset>
</form>
</div>